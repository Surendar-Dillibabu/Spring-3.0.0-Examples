<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans.xsd 
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context.xsd">
    
   <context:component-scan base-package="com.autowire" />
   
   <bean id="employeeBean" class="com.autowire.by.type.field.demo.beans.EmployeeBean">
     <property name="employeeId" value="110"/>
     <property name="employeeName" value="Vivek.B"/>
   </bean>
   
   <bean id="departmentBean" class="com.autowire.by.type.field.demo.beans.DepartmentBean">
     <property name="deptId" value="20" />
     <property name="departmentName" value="Credit Risk" />
   </bean>
   
   <!--  autowire-candidate="false" make the bean to be not registered in the container. Default is enabled with true -->
   <bean id="departmentBean1" class="com.autowire.by.type.field.demo.beans.DepartmentBean" autowire-candidate="false">
     <property name="deptId" value="21" />
     <property name="departmentName" value="Credit risk management" />
   </bean>
     
</beans>